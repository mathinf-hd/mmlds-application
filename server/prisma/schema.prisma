// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Just an example - model representing the entire application form data
model Application {
  id                      String   @id @default(uuid())
  createdAt               DateTime @default(now())

  // Page 1
  interviewTime           String
  bachelorName            String
  fieldOfStudy            String[]

  // Page 2 & 3
  mathLecturesGlobal      Json
  mathAreas               String[]
  mathSkills              Json

  // Page 4
  programmingFoundational Json
  programmingOpenSource   Json
  programmingCourses      Json

  // Page 5
  motivation              Json
}